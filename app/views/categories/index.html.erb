<h1>Categories</h1>
<ul id='tags'>
	<% @categories.each do |category| %>
	<li>
		<%= link_to category.name, category_path(category), class: 'article_title', id: "category_#{category.id}" %>
	</li>
	<% end %>
	
</ul>
<% if logged_in? %>
<%= link_to "Create A New Category", new_category_path %>
<% end %>