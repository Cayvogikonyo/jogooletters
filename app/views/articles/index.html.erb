<div class="wrapper"><h1>All Articles</h1></div>
<div class="articles-list">
<ul id='articles'>
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article), class: 'article_title' , id: "article_#{article.id}" %>
		</li>
	<% end %>
</ul>
<% if logged_in? %>
<%= link_to "Create A New Article", new_article_path, class: "new_article" %>
<% end %>
</div>
<div id="post-archive">
<h3>Article archive</h3>
  <% @articles_by_month.each do |month, articles| %>
    <h4><%=link_to "#{month.strftime('%B %Y')} (#{articles.count}):" %></h4>
   <ul>
     <% for article in articles %>
       <li><%= link_to article.title, article_path(article) %></li>
     <% end %>
   </ul>
  <% end %>
</div>